<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <style>
        body {
            background-image: url("https://wallpaperaccess.com/full/10767519.jpg");
            background-position: 50%;
        }

        #main {
            height: 100vh;
        }

        #form-container {
            width: 35%;
        }

        form {
            width: 100%;
        }
    </style>

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>

<body>
    <header>
        <!-- place navbar here -->
    </header>
    <main>
        <div id="main" class="d-flex flex-column justify-content-center align-items-center">

            <div id="form-container"
                class="d-flex flex-column justify-content-center align-items-center card text-black  border border-dark p-3 ">
                <h1
                    style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ; color: rgb(22, 23, 23);">
                    Register</h1>
                <form action="/register" method="post" class="mt-3">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="email" id="formId1" placeholder="email" />
                        <label for="formId1">Email</label>
                        <% if (errors.email) { %>
                            <h6 style="color: red;">
                                <%= errors.email %>
                            </h6>
                            <% } %>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="password" id="formId1"
                            placeholder="email@gmail.com" />
                        <label for="formId1">Password</label>
                        <% if (errors.password) { %>
                            <h6 style="color: red;">
                                <%= errors.password %>
                            </h6>
                            <% } %>
                    </div>
                    <div class="d-flex flex-column justify-content-center align-items-center mt-3">
                        <button type="submit" class="btn btn-outline-info">
                            Register
                        </button>
                        <a href="/login" class="mt-3">Already Have an Account. Click Here!</a>

                    </div>

                </form>
            </div>
        </div>

    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>